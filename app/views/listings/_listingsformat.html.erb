<%# this iterates over each listing within the listings table in the database and displays their attributes %>
    <% @listings.each do |listing| %>
    <div class="card"style="width: 18rem;">
        <%= image_tag listing.picture, class:"card-img-top" if listing.picture.attached? %></td>
        <div class="card-body">
        <h5 class="card-title"><%= listing.title %></h5>
        <h6 class="card-subtitle mb-2 text-muted"> Location: <%= listing.business %>, <%= listing.city.name %></h6>

        <p class="card-text"><%= listing.description %></p>
        Price: <%= number_to_currency(listing.price) %>
        <%= listing.booked %>
        <%= listing.date %>
        <%= (listing.time).strftime("%H:%M %p") %>
        <%= listing.user_id %>

        <%= link_to 'See More', listing, class: 'btn btn-primary' %>

        <% if current_user && current_user.id == listing.user_id %>
        <br>
        <%= link_to 'EDIT', edit_listing_path(listing), class: 'btn btn-primary' %>
        <%= link_to 'DELETE', listing, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary' %>
        <% end %>
        </div>
      </div>
      <br><br>
    <% end %>

<h1>Listings</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th>Business</th>
      <th>Instagram</th>
      <th>Booked</th>
      <th>Date</th>
      <th>Time</th>
      <th>User</th>
      <th>Category</th>
      <th>City</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <%# note to self: style listings into cards %>
  <tbody>
    <% @listings.each do |listing| %>
      <tr>
        <td><%= image_tag listing.picture, class:"card-img-top" if listing.picture.attached? %></td>
        <td><%= listing.title %></td>
        <td><%= listing.description %></td>
        <td><%= listing.price %></td>
        <td><%= listing.business %></td>
        <td><%= listing.instagram %></td>
        <td><%= listing.booked %></td>
        <td><%= listing.date %></td>
        <td><%= listing.time %></td>
        <td><%= listing.user_id %></td>
        <td><%= listing.category_id %></td>
        <td><%= listing.city_id %></td>
        <td><%= link_to 'View', listing %></td>
        <% if current_user && current_user.id == listing.user_id %>
        <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
        <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

